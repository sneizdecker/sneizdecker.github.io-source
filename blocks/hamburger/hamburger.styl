.hamburger
	appearance none
	position relative
	margin 0
	padding 0
	display block
	overflow hidden
	width 74px
	height 74px
	font-size 0
	text-indent -9999px
	cursor pointer
	background-color #888
	border none
	border-radius 3px
	box-shadow none
	transition-duration .3s
	transition-delay 0s
	transition-property background-color

	+above(905px)
		display none

	&:focus 
		outline none

	&__inner 
		position absolute
		top 35px
		right 15px
		left 15px
		display block
		height 5px
		background-color #fff
		transition-duration 0s
		transition-delay .3s
		transition-property background-color

		&:before,
		&:after
			position absolute
			left 0
			display block
			width 100%
			height 5px
			content ''
			background-color #fff
			transition-duration .3s, .3s
			transition-delay .3s, 0s

		&:before 
			top -15px
			transition-property top, transform

		&:after 
			bottom -15px
			transition-property bottom, transform

	&_active
		background-color #c83737

	&_active &__inner
		background-color transparent

		&:before,
		&:after
			transition-delay 0s, .3s

	&_active &__inner
		&:before 
			top 0
			transform rotate(45deg)

	&_active &__inner
		&:after 
			bottom 0
			transform rotate(-45deg)
